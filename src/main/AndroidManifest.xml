<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:a="http://schemas.android.com/apk/res/android" package="eu.unipv.epsilon.eqsolve">

    <application a:allowBackup="true" a:icon="@mipmap/ic_launcher" a:label="@string/app_name" a:theme="@style/AppTheme">
        <activity a:name=".MainActivity" a:label="@string/title_activity_main">
            <intent-filter>
                <action a:name="android.intent.action.MAIN"/>
                <category a:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity a:name=".ErrorActivity" a:label="@string/title_activity_error" a:parentActivityName=".MainActivity">
            <!-- Parent activity, legacy 4.0 and lower support -->
            <meta-data a:name="android.support.PARENT_ACTIVITY" a:value="eu.unipv.epsilon.eqsolve.MainActivity"/>
        </activity>
    </application>

</manifest>
